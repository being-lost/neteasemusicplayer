<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="bottomPane" prefHeight="60.0" stylesheets="@../../css/BottomStyle.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.main.BottomController">

    <left>
        <HBox alignment="CENTER" spacing="20">
            <padding>
                <Insets right="29" />
            </padding>
            <Label fx:id="labAlbum" onMouseClicked="#onClickedAlbum">
                <graphic>
                    <ImageView fitHeight="58" fitWidth="58"><Image url="@/image/NeteaseDefaultAlbumWhiteBackground.png" /></ImageView>
                </graphic>
            </Label>
            <Label fx:id="labPlayLast" onMouseClicked="#onClickedPlayLast">
                <graphic>
                    <ImageView fitHeight="30" fitWidth="30"><Image url="@/image/NeteaseLast.png" /></ImageView>
                </graphic>
            </Label>
            <Label fx:id="labPlay" onMouseClicked="#onClickedPlayOrPause">
                <graphic>
                    <ImageView fitHeight="32" fitWidth="32"><Image url="@/image/NeteasePause.png" /></ImageView>
                </graphic>
            </Label>
            <Label fx:id="labPlayNext" onMouseClicked="#onClickedPlayNext">
                <graphic>
                    <ImageView fitHeight="30" fitWidth="30"><Image url="@/image/NeteaseNext.png" /></ImageView>
                </graphic>
            </Label>
        </HBox>
    </left>

    <center>
        <BorderPane>
            <!--top是上边显示歌曲名称歌手和时间的部分-->
            <top>
                <BorderPane>
                    <left>
                        <HBox alignment="CENTER_LEFT" spacing="3">
                            <padding>
                                <Insets top="10" />
                            </padding>
                            <Label fx:id="labMusicName">无</Label>
                            <Label style="-fx-text-fill: #979797;">-</Label>
                            <Label fx:id="labMusicSinger">无</Label>
                        </HBox>
                    </left>
                    <right>
                        <HBox alignment="CENTER_RIGHT" spacing="3">
                            <padding>
                                <Insets top="10" />
                            </padding>
                            <Label fx:id="labPlayedTime">00:00</Label>
                            <Label style="-fx-font-size: 10px;-fx-font-family: '宋体';-fx-text-fill: #979797;" text=" / " />
                            <Label fx:id="labTotalTime">00:00</Label>
                        </HBox>
                    </right>
                </BorderPane>
            </top>
            <!--center是显示进度条的部分-->
            <center>
                <StackPane>
                    <padding>
                        <Insets bottom="11" />
                    </padding>
                    <children>
                        <ProgressBar fx:id="progressBarSong" progress="0" />
                        <Slider fx:id="sliderSong" onMouseClicked="#onClickedSliderSong" onMouseReleased="#onReleasedSliderSong" />
                    </children>
                </StackPane>
            </center>
        </BorderPane>
    </center>

    <right>
        <HBox alignment="CENTER" prefWidth="280" spacing="12">
            <padding>
                <Insets top="10" />
            </padding>
            <!--音量图标-->
            <Label fx:id="labSoundIcon" onMouseClicked="#onClickedSoundIcon" style="-fx-padding: 0 0 0 10px;">
                <graphic><ImageView fitHeight="19" fitWidth="19"><Image url="@/image/NeteaseVolumeIcon.png" /></ImageView></graphic>
            </Label>
            <!--下面StackPane是音量条-->
            <StackPane>
                <children>
                    <ProgressBar fx:id="progressBarVolume" progress="0.05" />
                    <Slider fx:id="sliderVolume" max="1" prefWidth="100" value="0.05" />
                </children>
            </StackPane>
            <!--播放模式图标-->
            <Label fx:id="labPlayModeIcon" onMouseClicked="#onClickedPlayMode">
                <graphic><ImageView fitHeight="24" fitWidth="24" preserveRatio="true"><Image url="@../../image/NeteaseSequencePlayMode.png" /></ImageView></graphic>
            </Label>
            <HBox fx:id="hBoxPlayListIcon" alignment="CENTER" onMouseClicked="#onClickedPlayListIcon" spacing="3">
                <ImageView fitHeight="15" fitWidth="15"><Image url="@../../image/NeteasePlayListIcon.png" /></ImageView>
                <Label fx:id="labPlayListCount" prefHeight="20.0" prefWidth="20.0" style="-fx-padding: 0; -fx-font-size: 10px;-fx-text-fill: WHITE;-fx-background-color: #BBBCC1;-fx-background-radius: 20;-fx-alignment: center;" text="0">
               <font>
                  <Font size="7.0" />
               </font></Label>
            </HBox>
        </HBox>
    </right>
</BorderPane>
