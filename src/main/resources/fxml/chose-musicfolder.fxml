<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<BorderPane prefHeight="338.0" prefWidth="360.0"
            stylesheets="@../css/ChoseFolderStyle.css"
            fx:controller="controller.ChoseFolderController"
            xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1">

   <top>
      <HBox alignment="CENTER_LEFT" prefHeight="40.0" prefWidth="200.0" spacing="175.0" style="-fx-border-color: #e8e8ea; -fx-border-image-width: 0 0 1 0;" BorderPane.alignment="CENTER_LEFT">
         <children>
            <Label style="-fx-font-family: &quot;Microsoft YaHei&quot;,&quot;SimSun&quot;; -fx-font-size: 16;" text="选择本地音乐文件夹" textFill="#333333">
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin>
            </Label>
            <Label fx:id="labCloseIcon" onMouseClicked="#onClickedCloseIcon">
               <graphic>
                  <ImageView fitHeight="18.0" fitWidth="19.0" pickOnBounds="true" preserveRatio="true"><Image url="@../image/chooseFolderCloseIcon.png" /></ImageView>
               </graphic>
            </Label>
         </children>
      </HBox>
   </top>

   <center>
      <ScrollPane hbarPolicy="NEVER" prefHeight="200.0" prefWidth="200.0" stylesheets="@../css/ChoseFolderStyle.css" BorderPane.alignment="CENTER">
         <content>
            <VBox fx:id="vWrapCheckBox" prefHeight="231.0" prefWidth="359.0" spacing="20.0" style="-fx-background-color: WHITE;">
               <children>
                  <Label fx:id="labTips" style="-fx-font-size: 12; -fx-font-family: &quot;Microsoft YaHei&quot;,&quot;SimSun&quot;; -fx-text-fill: #999999;" text="将自动扫描您勾选的目录。">
                     <VBox.margin>
                        <Insets left="10.0" top="20.0" />
                     </VBox.margin>
                  </Label>
               </children>
            </VBox>
         </content>
      </ScrollPane>
   </center>

   <bottom>
      <HBox alignment="CENTER" prefHeight="64.0" prefWidth="200.0" spacing="10.0" style="-fx-border-color: #E8E8EA; -fx-border-width: 1 0 0 0;" BorderPane.alignment="CENTER">
         <children>
            <Button id="btnConfirm" mnemonicParsing="false" prefHeight="32.0" prefWidth="92.0" text="确定" onAction="#onConfirmAction"/>
            <Button id="btnAddFolder" mnemonicParsing="false" prefHeight="30.0" prefWidth="92.0" text="添加文件夹" onAction="#onAddFolderAction"/>
         </children>
      </HBox>
   </bottom>

</BorderPane>
